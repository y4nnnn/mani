@model IEnumerable<Mani.Models.Member>
@{
    ViewBag.Title = "MemberOverview";
    Layout = "~/Views/Shared/_Layout 2.cshtml";
}

<!-- Bread crumb and right sidebar toggle -->
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-7 align-self-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">會員列表</h4>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item"><a href="/Backend/Index" class="text-muted">首頁</a></li>
                        <li class="breadcrumb-item text-muted active" aria-current="page">會員列表</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- End Bread crumb and right sidebar toggle -->
<!-- Container fluid  -->
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <!-- basic table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row justify-content-center">
                        <!-- Column -->
                        <div class="col-md-6 col-lg-3 col-xlg-3">
                            <div class="card card-hover">
                                <div class="p-2 bg-primary text-center">
                                    <h1 class="font-light text-white">@ViewBag.TotalMembers</h1>
                                    <h6 class="text-white">總會員數</h6>
                                </div>
                            </div>
                        </div>
                        <!-- Column -->
                    </div>
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered no-wrap">
                            <thead>
                                <tr>
                                    <th class="text-center"></th>
                                    <th class="text-center">狀態</th>
                                    <th class="text-center">編號</th>
                                    <th class="text-center">帳號</th>
                                    <th class="text-center">姓名</th>
                                    <th class="text-center">手機號碼</th>
                                    <th class="text-center">電子信箱</th>
                                    <th class="text-center">地址</th>
                                    <th class="text-center">註冊時間</th>
                                    @*<th class="text-center">@Html.DisplayNameFor(model => model.Status)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.MemberID)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.UserName)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.Name)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.Email)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.Address)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.CreatedDate)</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td class="text-center align-middle">
                                            @if (item.Status == "正常")
                                            {
                                                @*<button id="btn1" type="button" class="btn btn-secondary btn-circle" onclick="UpdateStatus('@item.OrderID')"><i class="fa fa-check"></i></button>*@
                                                <button type="button" class="btn btn-info btn-circle update-status" data-memberid="@item.MemberID"><i class="fa fa-check"></i></button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-warning btn-circle update-status2" data-memberid2="@item.MemberID"><i class="fa fa-times"></i></button>
                                            }
                                        </td>
                                        <td class="text-center align-middle">
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>
                                        <td class="text-center align-middle">
                                            @Html.DisplayFor(modelItem => item.MemberID)
                                        </td>
                                        <td class="text-center align-middle">
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td class="text-center align-middle">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td class="text-center align-middle">
                                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                                        </td>
                                        <td class="text-center align-middle" style="max-width: 200px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;"
                                            title="@Html.DisplayFor(modelItem => item.Email)">
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td class="text-center align-middle" style="max-width: 200px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;"
                                            title="@Html.DisplayFor(modelItem => item.Address)">
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td class="text-center align-middle">
                                            @Html.DisplayFor(modelItem => item.CreatedDate)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th class="text-center"></th>
                                    <th class="text-center">狀態</th>
                                    <th class="text-center">編號</th>
                                    <th class="text-center">帳號</th>
                                    <th class="text-center">姓名</th>
                                    <th class="text-center">手機號碼</th>
                                    <th class="text-center">電子信箱</th>
                                    <th class="text-center">地址</th>
                                    <th class="text-center">註冊時間</th>
                                </tr>
                            </tfoot>
                        </table>
                        <a href="/Member/MemberOverview">第一頁</a>

                        @if (ViewBag.CurrentPage != 1)
                        {
                            <a href="/Member/ChangePage?pageIndex=@(ViewBag.CurrentPage-1)">上一頁</a>
                        }

                        @if (ViewBag.CurrentPage != ViewBag.TotalPages)
                        {
                            <a href="/Member/ChangePage?pageIndex=@(ViewBag.CurrentPage+1)">下一頁</a>
                        }

                        <a href="/Member/ChangePage?pageIndex=@ViewBag.TotalPages">最後一頁</a>

                        @ViewBag.CurrentPage / @ViewBag.TotalPages
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Container fluid  -->

@section MyJS{

    <script>
        $(function () {
            $(".update-status").click(function () {
                var memberId = $(this).data("memberid");

                $.post("/Member/UpdateStatus", { memberId: memberId })
                    .done(function () {

                        location.reload(); // 更新後刷新
                    })
            });
        });
    </script>
    <script>
        $(function () {
            $(".update-status2").click(function () {
                var memberId = $(this).data("memberid2");

                $.post("/Member/UpdateStatus2", { memberId: memberId })
                    .done(function () {

                        location.reload(); // 更新後刷新
                    })
            });
        });
    </script>
}

